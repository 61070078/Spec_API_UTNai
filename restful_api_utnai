      properties:
        id:
          type: integer
          example: 1
        firstname:
          type: string
          example: Rick
        lastname:
          type: string
          example: Sanchez
        birthday:
          type: string
          example: 29/2/1999
        age:
          type: integer
          example: 19
        email:
          type: string
          example: rick@gmail.com
        number:
          type: string
          example: 089-999
        interest:
          type: string
          example: spaceship crew
        language:
          type: string
          example: English
        experience:
          type: string
          example: none

    profile_employer:
      type: object
